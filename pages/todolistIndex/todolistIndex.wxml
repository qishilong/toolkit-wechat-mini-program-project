<view class="inputContainer">
  <input 
    type="text"
    class="input"
    placeholder="请输入新的待办事项..."
    model:value="{{newContent}}"
    bindinput="inputHandle"
  />
</view>
<button 
  class="btn"
  style="width: 70%;"
  bindtap="add"
>创建一个任务</button>
<view class="title">共 {{list.length}} 项任务</view>
<!-- 下面会根据是否有任务有一个判断 -->
<view wx:if="{{list.length === 0}}" class="tip">- 请添加任务 -</view>
<view wx:else class="listContainer">
  <!-- 根据任务的长度来显示对应的任务条目 -->
  <todolistItem wx:for="{{list}}" wx:key="this" item="{{item}}" bindfresh="fresh"></todolistItem>
</view>


<van-tabbar active="{{ active }}" bind:change="onPageChange">
  <van-tabbar-item 
    wx:for="{{pagePathInfo}}" 
    wx:key="this"
    icon-prefix = "iconfont"
    icon = "{{item.icon}}"
    url = "{{item.path}}"
  >
    {{item.text}}
  </van-tabbar-item>
</van-tabbar>